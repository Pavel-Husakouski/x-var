{
  "compilerOptions": {
    "preserveSymlinks": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": [
      "node"
    ],
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/index.d.ts"
  ],
  "files": [
    "./src/index.ts",
    "./src/x-env.ts",
    "./src/x-var.ts",
    "node_modules/@types/node/globals.d.ts"
  ]
}
